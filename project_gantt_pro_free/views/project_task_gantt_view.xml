<odoo>
  <!-- Vista Gantt Free sobre project.task -->
  <record id="view_project_task_gantt_free" model="ir.ui.view">
    <field name="name">project.task.gantt_free</field>
    <field name="model">project.task</field>
    <field name="arch" type="xml">
      <gantt_free date_start="planned_date_begin"
                  date_stop="date_deadline"
                  default_group_by="project_id"
                  workdays_only="1"
                  string="Tasks Gantt (Free)"/>
    </field>
  </record>

  <!-- Agregar 'gantt_free' al view_mode del action principal de tareas -->
  <record id="project.action_view_task" model="ir.actions.act_window">
    <field name="view_mode">kanban,tree,form,gantt_free,calendar,pivot,graph,activity</field>
  </record>

  <!-- Acción de cliente y menú para abrir el Gantt Free -->
  <record id="action_project_task_gantt_free" model="ir.actions.client">
    <field name="name">Project Gantt (Free)</field>
    <field name="tag">project_gantt_pro_free.gantt</field>
    <field name="target">current</field>
  </record>

  <menuitem id="menu_project_task_gantt_free"
            name="Gantt (Free)"
            parent="project.menu_main_pm"
            action="action_project_task_gantt_free"
            sequence="35"/>
</odoo>
